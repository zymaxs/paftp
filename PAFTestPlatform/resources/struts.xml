<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.action.extension" value="action" />
	<constant name="struts.serve.static.browserCache" value="false" />

	<package name="s2sh" extends="struts-default">
		<action name="login"  class="com.paftp.action.LoginAction">
			<result name="success" type="redirect">/login.jsp</result>
			<result name="logsuccess" type="redirect">/index_1.jsp</result>
			<result name="error" type="redirect">/error.jsp</result>
			<result name="update" type="redirect">/update.jsp</result>
		</action>
		<action name="logout" method="logout" class="com.paftp.action.LoginAction">
			<result name="success" type="redirect">/login.jsp</result>
		</action>
		<action name="getbakpwd" method="getbakpwd" class="com.paftp.action.LoginAction">
			<result name="success" type="redirect">/login.jsp</result>
			<result name="error" type="redirect">/error.jsp</result>
		</action>
		<action name="register" method="register"
			class="com.paftp.action.RegisterAction">
			<result name="success" type="redirect">/reg_success.jsp</result>
			<result name="error" type="redirect">/error.jsp</result>
			<result name="exist" type="redirect">/reg_failed.jsp</result>
		</action>
		<action name="index" method="index" class="com.paftp.action.IndexAction">
			<result name="success">/home.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="updateuserinfo" method="updateUserInfo" class="com.paftp.action.UpdateUserInfoAction">
			<result name="success">/update.jsp</result>
			<result name="login">/login.jsp</result>
		</action>
		<action name="updatepassword" method="updatePassword" class="com.paftp.action.UpdateUserInfoAction">
			<result name="success">/update.jsp</result>
			<result name="login">/login.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="applysut" method="applySut" class="com.paftp.action.ApplySutAction">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
			<result name="login">/login.jsp</result>
			<result name="exist">/exist.jsp</result>
		</action>
		<action name="approvesut" method="approveSut" class="com.paftp.action.ApplySutAction">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
			<result name="login">/login.jsp</result>
		</action>
		<action name="getsut" method="getSut" class="com.paftp.action.ApplySutAction">
			<result name="success">/index.jsp</result>
			<result name="login">/login.jsp</result>
		</action>

	</package>

</struts> 